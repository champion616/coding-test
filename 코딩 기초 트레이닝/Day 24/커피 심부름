class Solution {
    public int solution(String[] order) {
        int answer = 0;
        
        int americano = 0;
        int cafelatte = 0;
        
        for(int i=0; i<order.length; i++){
            String menu = order[i];
            
            if(menu.contains("cafelatte")){
                cafelatte += 5000;
            }else{
                americano += 4500;
            }
        }
              
        answer = americano + cafelatte;
               
        return answer;
    }
}
