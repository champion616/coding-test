class Solution {
    public int solution(String str1, String str2) {
        int answer = 0;
        
        for(int i=0; i<str2.length()-(str1.length()-1); i++){
                if(str1.charAt(0) == str2.charAt(i)
                  && str1.charAt(1) == str2.charAt(i+1)
                  && str1.charAt(2) == str2.charAt(i+2)){
                    return 1;
                }
            
        }
        
        return answer;
    }
}
